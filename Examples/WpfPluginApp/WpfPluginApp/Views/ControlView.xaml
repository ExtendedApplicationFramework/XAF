<UserControl
    x:Class="WpfPluginApp.Views.ControlView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfPluginApp.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xaf="https://XAF-Library.com/XAF/WPF"
    d:DesignHeight="1080"
    d:DesignWidth="450"
    mc:Ignorable="d">
    <StackPanel>

        <Button
            Margin="5"
            Command="{Binding NavigateToViewACommand}"
            Content="Navigate to View A" />

        <Button
            Margin="5"
            Command="{Binding NavigateToViewBCommand}"
            Content="Navigate to View B" />

        <Button
            Margin="5"
            Command="{Binding OpenDialogCommand}"
            Content="Open Dialog" />

        <Button
            Margin="5"
            Command="{Binding NavigateBackCommand}"
            Content="Navigate Back" />

        <Button
            Margin="5"
            Command="{Binding NavigateForwardCommand}"
            Content="Navigate Forward" />

    </StackPanel>
</UserControl>
